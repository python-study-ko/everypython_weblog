{% macro post_list(col1,col2,col2_link,col3,col3_link,col4)%}
    <th>
        <td>{{ col1 }}</td>
        {# 두번쨰 열 #}
        {% if col2_link %}
            <td><a href="{{ col2_link }}">{{ col2 }}</a></td>
        {% else %}
            <td>{{ col2 }}</td>
        {% endif %}

        {# 세번째 열 #}
        {% if col3_link %}
            <td><a href="{{ col3_link }}">{{ col3 }}</a></td>
        {% else %}
            <td>{{ col3 }}</td>
        {% endif %}

        {# 네번째 열 #}
        {% if col4 %}
            <td>{{ col4 }}</td>
        {% endif %}
    </th>
{% endmacro %}






